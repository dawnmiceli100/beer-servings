<h3> Tap menu for : <%= @place.name %> </h3>

<table class="table table-striped table-hover">
  <thead>
    <tr> 
      <th>Tap Number</th>
      <th>Brewery</th>
      <th>Beer</th>
      <th>ABV</th>
      <th>Serving Size/Price</th>
      <th>Serving Size/Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>    
    <% @menu_items.each do |item| %>
      <tr>
        <td><%= item.tap_number %></td>
        <td><%= item.beer.brewery.name %></td>
        <td><%= item.beer.name %></td>
        <td><%= item.beer.abv %></td>
        <td>
          <span><%= item.servings.first.size %>/</span>
          <span>$<%= item.servings.first.price %></span>
        </td>
        <td>
          <span><%= item.servings.last.size %>/</span>
          <span>$<%= item.servings.last.price %></span>
        </td>
        <td><%= link_to "change", edit_menu_item_path(item), class: "btn btn-small btn-success"%></td>
      </tr>
      
    <% end %>
  </tbody>  
</table>  